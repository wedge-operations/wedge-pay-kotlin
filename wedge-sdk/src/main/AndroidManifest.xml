<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wedge.wedgesdk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application>
        <activity
            android:name=".sdk.WebViewActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/Theme.OnboardingSDK.EdgeToEdge">
            <!-- Hosted Link completion redirect (default scheme). Use this as hostedLinkRedirectUri, or use your own scheme and forward the result to WebViewActivity with extras hostedLinkSuccess and hostedLinkCallbackUrl. -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="wedgehostedlink" android:host="complete" />
            </intent-filter>
        </activity>
    </application>
</manifest>
